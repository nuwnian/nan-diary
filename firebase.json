{
  "hosting": {
    "public": "deploy",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/welcome.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}