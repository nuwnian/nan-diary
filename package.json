{
  "name": "nan-diary",
  "version": "1.0.0",
  "description": "A cozy diary app for creative project planning with Firebase integration",
  "main": "dashboard.html",
  "scripts": {
    "dev": "node inject-env.js && npx live-server --port=3000 --open=dashboard.html",
    "build": "npm run build:prepare && npm run build:copy && npm run build:config && npm run build:inject",
    "build:prepare": "echo '🏗️  Preparing build...'",
    "build:copy": "node copy.js",
    "build:config": "node build-config.js",
    "build:inject": "node inject-env.js",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy:full": "npm run build && firebase deploy",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "lint": "eslint src/js/*.js --fix",
    "lint:check": "eslint src/js/*.js",
    "security-check": "npm audit --audit-level moderate",
    "test": "echo '🧪 Tests coming soon...' && echo '✅ No tests configured yet' && exit 0",
    "start": "npm run dev",
    "clean": "node clean.js",
    "prebuild": "npm run clean",
    "postbuild": "echo '✅ Build complete! Files ready in deploy/ directory'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuwnian/nan-diary.git"
  },
  "keywords": [
    "diary",
    "creative",
    "planning",
    "firebase",
    "pwa",
    "responsive",
    "security"
  ],
  "author": "nuwnian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuwnian/nan-diary/issues"
  },
  "homepage": "https://nan-diary-6cdba.web.app",
  "devDependencies": {
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "firebase-tools": "^13.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ]
}
