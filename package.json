{
  "name": "nan-diary",
  "version": "1.0.0",
  "description": "A cozy diary app for creative project planning with Firebase integration",
  "main": "dashboard.html",
  "scripts": {
    "dev": "node scripts/build/inject-env.js && npx live-server --port=3000 --open=dashboard.html",
    "dev:fullstack": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "node scripts/build/inject-env.js && npx live-server --port=3000 --open=dashboard.html",
    "dev:backend": "cd server && npm run dev",
    "build": "npm run build:prepare && npm run build:copy && npm run build:config && npm run build:inject",
    "build:prepare": "echo 'ðŸ—ï¸  Preparing build...'",
    "build:copy": "node scripts/build/copy.js",
    "build:config": "node scripts/build/build-config.js",
    "build:inject": "node scripts/build/inject-env.js",
    "deploy": "npm run build && node scripts/build/deploy-inject.js && firebase deploy --only hosting",
    "deploy:full": "npm run build && firebase deploy",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "lint": "eslint src/js/*.js --fix",
    "lint:check": "eslint src/js/*.js",
    "lint:backend": "cd server && npm run lint",
    "security-check": "npm audit --audit-level moderate",
    "test": "jest --runInBand",
    "test:backend": "cd server && npm test",
    "test:all": "npm test && npm run test:backend",
    "start": "npm run dev:fullstack",
    "clean": "node scripts/build/clean.js",
    "prebuild": "npm run clean",
    "postbuild": "echo 'âœ… Build complete! Files ready in deploy/ directory'",
    "setup": "npm install && cd server && npm install",
    "setup:backend": "cd server && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuwnian/nan-diary.git"
  },
  "keywords": [
    "diary",
    "creative",
    "planning",
    "firebase",
    "pwa",
    "responsive",
    "security"
  ],
  "author": "nuwnian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuwnian/nan-diary/issues"
  },
  "homepage": "https://nan-diary-6cdba.web.app",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "firebase-tools": "^13.0.0",
    "jest": "^29.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ]
}
