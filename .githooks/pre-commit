#!/usr/bin/env node
// Pre-commit hook to prevent secrets from being committed

const { execSync } = require('child_process');
const path = require('path');

try {
  // Get staged files
  const stagedFiles = execSync('git diff --cached --name-only', { encoding: 'utf8' })
    .trim()
    .split('\n')
    .filter(Boolean);

  if (stagedFiles.length === 0) {
    console.log('No staged files to scan.');
    process.exit(0);
  }

  // Check for .env.local files
  const envFiles = stagedFiles.filter(f => f.includes('.env.local'));
  if (envFiles.length > 0) {
    console.error('\nError: Attempt to commit .env.local file detected:');
    envFiles.forEach(f => console.error(`  - ${f}`));
    console.error('Please remove .env.local from staging before committing.\n');
    process.exit(1);
  }

  // Run secret scanner on staged files
  console.log('Scanning staged files for secrets...');
  try {
    execSync(`node "${path.join(__dirname, 'secret-scan.js')}" ${stagedFiles.map(f => `"${f}"`).join(' ')}`, 
             { stdio: 'inherit' });
    console.log('No secrets detected. Commit proceeding...');
  } catch (error) {
    console.error('\nPre-commit hook blocked commit due to detected secrets.');
    process.exit(error.status || 1);
  }

  process.exit(0);
} catch (error) {
  console.error('Pre-commit hook error:', error.message);
  process.exit(1);
}